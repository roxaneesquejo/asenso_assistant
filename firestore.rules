rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read a loan application (for the client status portal)
    // but only authenticated users (e.g., loan officers) to create/update them.
    // In a real app, you'd have more granular roles and rules.
    match /loanApplications/{applicationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}